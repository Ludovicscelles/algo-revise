
// tsconfig.json
// TypeScript configuration file
{
  // Compiler options
  "compilerOptions": {
    // Specify module code generation, esnext for modern JavaScript
    "module": "esnext",
    // Specify target JavaScript version, es2020 for compatibility
    "target": "es2020",
    // Use bundler module resolution strategy
    // More precisely "bundler" for better compatibility with modern bundlers
    // budlers are tools like Webpack, Rollup, or Vite that bundle JavaScript files for usage in a browser
    "moduleResolution": "bundler",
    // Enable strict type-checking options
    "strict": true,
    // Enable interoperability between CommonJS and ES Modules
    "esModuleInterop": true,
    // Skip type checking of declaration files
    "skipLibCheck": true,
    // Do not emit output files, useful for type-checking only
    "noEmit": true,
  },
  // Include all TypeScript files in the src directory
  "include": ["src"]
}
